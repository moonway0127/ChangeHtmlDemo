<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xin.moonway.changehtmldemo.MainActivity">

   <WebView
       android:id="@+id/webview"
       android:layout_width="match_parent"
       android:layout_height="match_parent"></WebView>

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="vip"
       android:id="@+id/vip"
       />
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="htmlContent"
       app:layout_constraintLeft_toRightOf="@+id/vip"
       android:id="@+id/showHtml"
       />

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="changeIntegral"
       app:layout_constraintLeft_toRightOf="@id/showHtml"
       android:id="@+id/changeIntegral"
       />
</android.support.constraint.ConstraintLayout>
